<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.animator_abhi.recyclercalendarexample.MainCalActivity">


    <com.animator_abhi.recyclerviewcalendar.RecyclerCalendarView
        android:layout_width="0dp"
        android:layout_height="400dp"
        app:showFixedHeader="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:selectionBackgroundColor="@color/colorAccent"
        app:showMonthDivider="true"
        android:id="@+id/recyclerCalendarView"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"></com.animator_abhi.recyclerviewcalendar.RecyclerCalendarView>

    <TextView
        android:id="@+id/date1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="change"
        android:visibility="visible"
        android:text="today date"
        app:layout_constraintBottom_toTopOf="@+id/recyclerCalendarView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


